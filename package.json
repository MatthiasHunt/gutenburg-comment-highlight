{
  "name": "wordpress-syntax-highlighter",
  "displayName": "WordPress Syntax Highlighter",
  "description": "A VS Code Extension that adds syntax highlighting to WordPress and Gutenberg decorators and function calls that exist inside traditional comment blocks",
  "icon": "assets/wordpress-syntax-highlighter.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/MatthiasHunt/gutenburg-comment-highlight"
  },
  "bugs": {
    "url": "https://github.com/MatthiasHunt/gutenburg-comment-highlight/issues"
  },
  "publisher": "matthiashunt",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "grammars": [
      {
        "scopeName": "gutenberg-html.injection",
        "path": "./syntaxes/html-injection.json",
        "injectTo": [
          "text.html.derivative"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.json": "json"
        }
      },
      {
        "scopeName": "wordpress-css.injection",
        "path": "./syntaxes/css-injection.json",
        "injectTo": [
          "source.css"
        ]
      },
      {
        "scopeName": "wordpress-php.injection",
        "path": "./syntaxes/php-injection.json",
        "injectTo": [
          "text.html.php"
        ]
      }
    ]
  }
}
