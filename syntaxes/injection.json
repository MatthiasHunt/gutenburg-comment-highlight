{
  "scopeName": "gutenburg-comment.injection",
  "injectionSelector": "L:comment.block.html",
  "patterns": [
    {
      "include": "#gutenburg"
    },
    {
      "include": "#gutenburg-json"
    }
  ],
  "repository": {
    "gutenburg": {
      "match": "(wp:[^ ]+)",
      "name": "variable.parameter.gutenburg"
    },
    "gutenburg-json": {
      "begin": "\\{",
      "end": "\\}",
      "name": "meta.embedded.block.json",
      "patterns": [
        {
          "include": "source.json"
        }
      ]
    }
  }
}
