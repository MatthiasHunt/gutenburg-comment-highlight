{
  "scopeName": "gutenberg-html.injection",
  "injectionSelector": "L:comment.block.html",
  "patterns": [
    {
      "include": "#gutenberg-html"
    },
    {
      "include": "#gutenberg-embedded-php"
    }
  ],
  "repository": {
    "gutenberg-html": {
      "begin": "(wp:[^ ]+)",
      "beginCaptures": {
        "0": {
          "name": "entity.name.function.gutenberg"
        }
      },
      "end": ".?(?=\\/?-->)",
      "name": "meta.embedded.block.json",
      "patterns": [
        {
          "include": "source.json"
        }
      ]
    },
    "gutenberg-embedded-php": {
      "begin": "<\\?(?i:php|=)?",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.embedded.begin.php"
        }
      },
      "end": "(\\?)>",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.embedded.end.php"
        },
        "1": {
          "name": "source.php"
        }
      },
      "name": "meta.embedded.block.php",
      "patterns": [
        {
          "include": "source.php"
        }
      ]
    }
  }
}
